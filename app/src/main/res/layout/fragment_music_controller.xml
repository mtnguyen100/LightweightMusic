<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layoutDirection="ltr">

    <ImageView
        android:id="@+id/song_focus_album_cover_imageview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:contentDescription="@string/album_cover_imageview_content_description_string"
        android:src="@drawable/ic_album_placeholder"/>

    <TextView
        android:id="@+id/song_focus_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center_horizontal"
        tools:text="Orbion (extended version)"/>

    <TextView
        android:id="@+id/song_focus_artist_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="32dp"
        android:gravity="center_horizontal"
        tools:text="Armin van Buuren"/>
